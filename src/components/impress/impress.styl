  header
    text-align: center
    color:#646464
    h2
      height: 1rem
      font-size: 0.36rem
      line-height: 1rem
      border-bottom: 1px solid #f0f0f0
    h4
      font-size:0.32rem
      padding:0.4rem 0 0.6rem 0
    h5
      font-size:0.38rem
      color:#007cb9
      padding-bottom:0.6rem
  .title{
    font-size: 0.32rem;
    text-align: center;
    height: 2.2rem;
    line-height: 2.2rem;
    color: #67a3cc;
  }
  #cancle{
    background: url(./cancle.png) no-repeat;
    background-size: 0.5rem 0.5rem;
    position: absolute;
    right: 15px;
    top: 6px;
    width: 0.5rem;
    height: 0.5rem;
  }
  .chioces_container{
    display: flex;
    justify-content: center;
    color: #646464;
  }
  .chioces_container ul{
    width: 5rem;  
  }
  .chioces_container ul li{
    height: 0.66rem;
    line-height: 0.66rem;
    font-size: 0.32rem;
    text-align: center;
    width: 100%;
    background-color: #f0f0f0;
    margin-bottom: 0.5rem;
    border-radius: 5px;
  }
  .chioces_container ul .active{
    background-color: #d5eeff;
  }
  .fixed{
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(0,0,0,0.5);
    height: 100%;
    width: 100%;
    z-index: 100;
  }
  .footer
    position: fixed
    bottom: 0
    left: 0
    width: 100%
    z-index: 1000
    background-color: #d5eeff
    .container
      position: relative
      top: 0
      left: 0
      z-index: 1001
    .show-type-container
      height: 1rem
      line-height: 1rem
      .show-all
        width: 0.5rem
        height: 0.5rem
        position: absolute
        top: 0.26rem
        right: 1.5rem
        background: url(./6.png) no-repeat
        background-size: 0.5rem 0.5rem
      .list
        position: absolute
        height: 1rem
        width: 1.3rem
        right: 0
        top: 0
        font-size: 0.34rem
        color: #323232
    .list-type
      height:5rem
      overflow:auto
      li
        float: left
        font-size: 0.26rem
        width: 33.33%
        height:0.5rem
        line-height:0.5rem
        margin-bottom: 0.3rem
        display:flex
        justify-content:center
        .active
          color: #03b0ff;
          background-color: #d5eeff;
          border:1px solid #73c2e6;
        span
          display:inline-block
          border-radius: 16px
          box-sizing: border-box
          text-align: center
          padding:0 0.15rem
          width:90%
  .mask
    position: fixed
    left: 0
    top: 0
    width: 100%
    height: 100%
    background-color: rgba(0,0,0,0.4)
    z-index: 50