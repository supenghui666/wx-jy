  $fontSize = 0.32rem
  .ingredient
    >div
      width:7.5rem
      margin:0 auto
    h4
      text-align:center
      height:1rem
      width:100%
      line-height:1rem
      font-size:0.36rem
      color:#646464
      border-bottom:1px solid #eeeeee
    h5
      font-size: $fontSize
      padding: 0.8rem 0.3rem 0 0.3rem;
      color:#2486be
      height:1.5rem
      span
        float:left
        line-height:0.4rem
      div
        width:6rem
        padding-left:0.2rem
        float:left
    .option
      font-size: $fontSize
      width:5rem
      margin:0 auto
      color:#646464
      .active
        background-color: #d5eeff
      li
        height: 0.66rem;
        line-height: 0.66rem;
        width: 100%;
        background-color: #f0f0f0;
        margin-bottom: 0.6rem;
        border-radius: 5px;
  .footer
    position: fixed
    bottom: 0
    left: 0
    width: 100%
    z-index: 1000
    background-color: #d5eeff
    .container
      position: relative
      top: 0
      left: 0
      z-index: 1001
    .show-type-container
      height: 1rem
      line-height: 1rem
      .show-all
        width: 0.5rem
        height: 0.5rem
        position: absolute
        top: 0.26rem
        right: 1.5rem
        background: url(./6.png) no-repeat
        background-size: 0.5rem 0.5rem
      .list
        position: absolute
        height: 1rem
        width: 1.3rem
        right: 0
        top: 0
        font-size: 0.34rem
        color: #323232
    .list-type
      padding-bottom:0.2rem
      li
        float: left
        font-size: 0.3rem
        width: 20%
        text-align: center
        height: 0.46rem
        line-height: 0.46rem
        margin-bottom: 0.3rem
        .active
          color: #03b0ff;
          background-color: #d5eeff;
          border:1px solid #73c2e6;
        span
          display:inline-block
          border-radius: 10px
          box-sizing: border-box
          padding:0 0.4rem
          border:1px solid #ccc;
  .title{
  font-size: 0.32rem;
  text-align: center;
  height: 2.2rem;
  line-height: 2.2rem;
  color: #67a3cc;
}
#cancle{
  background: url(./cancle.png) no-repeat;
  background-size: 0.5rem 0.5rem;
  position: absolute;
  right: 15px;
  top: 6px;
  width: 0.5rem;
  height: 0.5rem;
}
.chioces_container{
  display: flex;
  justify-content: center;
  color: #646464;
}
.chioces_container ul{
  width: 5rem;  
}
.chioces_container ul li{
  height: 0.66rem;
  line-height: 0.66rem;
  font-size: 0.32rem;
  text-align: center;
  width: 100%;
  background-color: #f0f0f0;
  margin-bottom: 0.6rem;
  border-radius: 5px;
}
.chioces_container ul .active{
  background-color: #d5eeff;
}
.fixed{
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,0.5);
  height: 100%;
  width: 100%;
  z-index: 50;
}